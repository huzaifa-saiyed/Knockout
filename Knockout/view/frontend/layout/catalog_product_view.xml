<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <container name="custom.container" htmlTag="div" htmlClass="custom-container" after="product.attributes">
                <block class="Kitchen\Knockout\Block\Product\View" name="custom.block" template="Kitchen_Knockout::product/view/index.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">Kitchen\Knockout\Block\ShowData</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
 